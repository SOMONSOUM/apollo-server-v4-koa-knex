{
  "name": "apollo-server-v4-koa-knex",
  "version": "1.0.0",
  "description": "The sample boilerplate apollo server version 4 with koa and knex",
  "main": "server.ts",
  "author": "SOUM SOM ON",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only src/server",
    "start": "node -r ./prod-path.js dist/src/server.js",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && tsc",
    "generate": "graphql-codegen --config codegen.yml",
    "postinstall": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "commit": "cz"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@as-integrations/koa": "^1.1.0",
    "@graphql-tools/schema": "^9.0.17",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "cloudinary": "^1.35.0",
    "aws-sdk": "^2.1337.0",
    "bcrypt": "^5.1.0",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload-minimal": "^1.5.4",
    "graphql-ws": "^5.12.0",
    "ws": "^8.13.0",
    "graphql-scalars": "1.21.3",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-static": "^5.0.0",
    "mysql2": "^3.3.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@fruits-chain/eslint-config-preset": "^0.2.2",
    "@fruits-chain/prettier-config-preset": "^0.0.3",
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/plugin-proposal-async-generator-functions": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-export-default-from": "^7.18.10",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-typescript": "^7.21.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@graphql-codegen/cli": "^3.3.0",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.3",
    "@graphql-codegen/typescript-resolvers": "^3.2.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.1.2",
    "prettier": "^2.8.4",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "prettier": "@fruits-chain/prettier-config-preset",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
